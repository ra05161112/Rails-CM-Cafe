<%= form_with(model: @item, url: "/items",method: :post ,local: true) do |f| %>
  <div>
    <%= f.label :name, "商品名" %><br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description, "商品概要" %><br>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :price, "価格" %><br>
    <%= f.number_field :price %>
  </div>
  <div>
    <%= f.label :creation_time, "作成時間" %><br>
    <%= f.number_field :creation_time, step: "0.1" %>
  </div>
    <span class="picture">
    <%= f.file_field :picture %>
  </span><br>
  <%= f.submit %>
<% end %>