
<% @order.each do |order| %>
  <%= Item.find(order.item_id).name %>
  <%= Item.find(order.item_id).price %>
  <%= order.quantity %>
  <%= "¥#{Item.find(order.item_id).price*order.quantity}" %><br>
<% end %>
<%= button_to("受け取り","/total_orders/#{@total_order.id}", method: :delete, data: { confirm: "商品の受け取りが完了しました" }) %>