<%= form_with model: @user, url: "/users/#{@user.id}/edit", local: true  do |f| %>
  <%= render "shared/error_messages", model: f.object %>
  <div class="field">
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :age, "年齢" %><br />
    <%= f.number_field :age %>
  </div>

  <div class="filed">
    <%= f.label :sex, "性別" %><br>
    <%= f.select :sex, User.sexes.keys  %>
  </div>

  <div class="field" hidden>
    <%= f.label :admin %>
    <%= f.check_box :admin %>
  </div>
  <% if current_user.admin? %>
    <div class="field">
      <%= f.label :recom_count, "おすすめ基準(票)" %><br>
      <%= f.number_field :recom_count %><br>
      <%= "参考:登録者数#{User.count}人" %>
      <p>お気に入り件数がおすすめ基準を超えた商品のみおすすめとして表示されます。</p>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<%= link_to("戻る", "/users/#{@user.id}") %>
